{% extends 'GPSTrackerBundle::layout.html.twig' %}

{% block title %}
Connexion-utilisateur
{% endblock %}

{% block stylesheets %}
    {{parent()}}
    {% block menuDeroulant %}{% endblock %}<!--Redefinition du menu deroulant sans modification-->

    <link rel="stylesheet" href="{{asset('bundles/gpstracker/css/connReset.css')}}">
    <link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css'>
    <link rel="stylesheet" href="{{asset('bundles/gpstracker/css/connexion.css')}}">

{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        {% block menu %}
            {% block userMenu %}{% endblock %}<!--Redefinition sans implementation du block userMenu-->
            {{parent()}}
        {% endblock %}
    </div>

    <div class="row">
        <div class="col-md-7">
            {% block carousel %}
                {{parent()}}
            {% endblock %}
        </div>
        <div class="containerConn col-md-2">
          <div class="card"></div>
          <div class="card">
            <h1 class="title text-center">Connexion</h1>
            <form method="POST" action="{{path('user_index')}}">
              <div class="input-container">
                <input type="text" id="Login" required="required" name="login"/>
                <label for="Login">Login</label>

                <div class="bar"></div>
              </div>
              <div class="input-container">
                <input type="password" id="Password" required="required" name="password"/>
                <label for="Password">Password</label>
                <div class="bar"></div>
              </div>

              {% block error_connect %}{% endblock %}<!--block qui contient l'erreur de connexion-->

              <div class="button-container">
                <button type="submit"><span>OK</span></button>
              </div>
            </form>
          </div>
          <div class="card alt">
            <div class="toggle"></div>
            <h1 class="title">Inscription
              <div class="close"></div>
            </h1>
            <form method="POST" action="{{path('user_inscription')}}">
              <div class="input-container">
                  {{form_widget(form.prenom, {'attr': {'id': 'Prenom', 'required': 'required'}})}}
                  {{form_label(form.prenom, "Prenom", {'label_attr': {'for': 'Prenom'}})}}
                <!--<input type="text" id="Prenom" required="required"/>
                <label for="Prenom">Prenom</label>-->
                <div class="bar"></div>
              </div>
              <div class="input-container">
                  {{form_widget(form.nom, {'attr': {'id': 'Nom', 'required': 'required'}})}}
                  {{form_label(form.nom, "Nom", {'label_attr': {'for': 'Nom'}})}}
                <!--<input type="text" id="Nom" required="required"/>
                <label for="Nom">Nom</label>-->
                <div class="bar"></div>
              </div>
              <div class="input-container">
                  {{form_widget(form.login, {'attr': {'id': 'Login', 'required': 'required'}})}}
                  {{form_label(form.login, "Login", {'label_attr': {'for': 'Login'}})}}
                <!--<input type="text" id="Login" required="required"/>
                <label for="Login">Login</label>-->
                <div class="bar"></div>
              </div>
              <div class="input-container">
                  {{form_widget(form.password, {'attr': {'id': 'Password', 'required': 'required', 'type': 'password'}})}}
                  {{form_label(form.password, "Password", {'label_attr': {'for': 'Password'}})}}
                <!--<input type="password" id="Password" required="required"/>
                <label for="Password">Password</label>-->
                <div class="bar"></div>
              </div>
              <div class="button-container">
                <button type="submit" ><span>Next</span></button>
              </div>
            </form>
          </div>
        </div>
    </div>

</div>

{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script src="{{ asset('bundles/gpstracker/js/connexion.js') }}"></script>
{% endblock %}
